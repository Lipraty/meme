{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "esnext", "dom"
    ],
    "declaration": true,
    "removeComments": false,
    "strict": true,
    "moduleResolution": "node",
    "types": [ "node" ],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "./pages",
    "paths": {
      // relative base url
      "@/*": [ "./*" ],
    }
  },
  "exclude": [ "node_modules" ],
  "ts-node": {
    "require": [ "tsconfig-paths/register" ]
  }
}
